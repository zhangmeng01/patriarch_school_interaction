	<select id="findAchievementDtoList"  resultType="java.util.HashMap">
		SELECT us_id,us_name,ac_is_delete ,us_educationid,us_code,
		<foreach collection="subjectNameList" item="item" index="index"  open="" close="" separator="">
			SUM( CASE WHEN subject_name = #{item} THEN
			score  END) as  #{item},
		</foreach>
		sum(score) as score
		FROM  achievement where ex_id = #{exId} and ac_is_delete = 'N'
		GROUP BY us_id,us_name,ac_is_delete,us_educationid,us_code order by score desc
	</select>
