	<select id="findMyScore"  resultType="java.util.HashMap">
		SELECT us_id,us_name,ac_is_delete ,us_educationid,us_code,ex_id,
		sum(score) as score
		FROM  achievement where  ac_is_delete = 'N' and us_id = #{usId}
		GROUP BY us_id,us_name,ac_is_delete,us_educationid,us_code,ex_id order by ex_id desc limit 0,6
	</select>
	<select id="findMaxAndAvgScore"  resultType="java.util.HashMap">
		select avg(s.score) avg_score, max(s.score) max_score, ex_id from (
			select  sum(score) score  ,ex_id from achievement where ac_is_delete = 'N' and ci_id = #{ciId} GROUP BY us_id,ex_id
		) s group by ex_id order by ex_id desc limit 0,6
	</select>



	<select id="findMyScoreAndRank"  resultType="java.util.HashMap">
		select '总分' as subject,
		sum(score) as score,
		(select avg(t1.score) as score from (
		select sum(score) as score
		from achievement b1
		where b1.ex_id=#{exId}
		group by b1.us_id) t1) as avgscore
		from achievement a1
		where a1.ex_id=#{exId} and
		a1.us_id=#{usId}
		<foreach collection="subjectNameList" item="item" index="index"  open="" close="" separator="">
		union all
		select  a2.subject_name,
		a2.score,
		(select avg(score) as score
		from achievement b2
		where b2.ex_id=#{exId} and
		b2.subject_name=#{item}) as avgscore
		from achievement a2
		where a2.ex_id=#{exId} and
		a2.us_id=#{usId} and
		a2.subject_name=#{item}
		</foreach>
	</select>

	<select id="findMySort"  resultType="java.util.HashMap">
	select m.*,(@i:=@i+1) sort from (
	SELECT    us_id usId,us_name usName,ac_is_delete acIsDelete,
	sum(score) score
	FROM  achievement  where ex_id = #{exId} and  ac_is_delete = 'N'
	GROUP BY us_id,us_name,ac_is_delete order by score desc
	) m ,(SELECT @i:=0) as i
	</select>

	<select id="getUsidByExid" resultType="java.util.HashMap">
		select  us_id as ut_id from achievement where ac_is_delete = 'N' and  ex_id =#{exId} GROUP BY us_id
	</select>
