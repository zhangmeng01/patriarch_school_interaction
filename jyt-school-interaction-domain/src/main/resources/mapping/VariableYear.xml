<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" > 
<mapper namespace="com.yjtoon.school.mapper.IVariableYearMapper" >
  <resultMap id="BaseResultMap" type="com.yjtoon.school.domain.VariableYear" >
          <id column="va_id" property="vaId" jdbcType="BIGINT" />
            <result column="va_year_num" property="vaYearNum" jdbcType="VARCHAR" />
            <result column="va_state" property="vaState" jdbcType="TINYINT" />
  </resultMap>
   
  <sql id="baseColumns">
         va_id
         ,va_year_num
         ,va_state
  </sql>
  
  <sql id="whereSql">
        <if test="vaId != null">
         and va_id=#{vaId}
		</if> 
        <if test="vaYearNum != null and vaYearNum!='' ">
         and va_year_num=#{vaYearNum}
		</if>
        <if test="vaState != null">
         and va_state=#{vaState}
		</if> 
  </sql>
  
  	<select id="getById" resultMap="BaseResultMap">
		select <include refid="baseColumns"/>
		from variable_year  where va_id =#{vaId}
	</select>
	
	<select id="getByIds" resultMap="BaseResultMap">
	     select <include refid="baseColumns"/> from variable_year  where va_id in
	     <foreach collection="array" item="item" index="index"  open="(" close=")" separator=",">
               #{item}
         </foreach>  
	</select>
	
	<select id="get" resultMap="BaseResultMap" parameterType="com.yjtoon.school.domain.VariableYear">
		select <include refid="baseColumns"/>
		from variable_year  where 1=1 <include refid="whereSql"/> limit 1
	</select>
	
	<select id="findAllList" resultMap="BaseResultMap">
	     select <include refid="baseColumns"/> from variable_year
	</select>
	
	<select id="findList"  parameterType="com.yjtoon.school.domain.VariableYear" resultMap="BaseResultMap">
	     select <include refid="baseColumns"/> from variable_year where 1=1 <include refid="whereSql"/>
	      <if test="orderBy != null and orderBy!='' ">
                order by ${orderBy}  
            </if>
	</select>

	
	 <select id="getCount"  parameterType="com.yjtoon.school.domain.VariableYear" resultType="java.lang.Integer">
         select count(1) from variable_year where 1=1 <include refid="whereSql"/>
      </select>

    <select id="findEntityWrapper"  parameterType="com.yjtoon.framework.sqlplus.EntityWrapper" resultMap="BaseResultMap">
	     select <include refid="baseColumns"/> from variable_year where 1=1  ${ew.getSqlSegment()} 
	</select>
	
      <insert id="insert" useGeneratedKeys="true" keyProperty="vaId" parameterType="com.yjtoon.school.domain.VariableYear">
       insert into variable_year 
		<trim prefix="(" suffix=")" suffixOverrides=","> 
		        <if test="vaId != null">
		          va_id,
				</if> 
		        <if test="vaYearNum != null and vaYearNum!='' ">
		         va_year_num,
				</if>
		        <if test="vaState != null">
		          va_state,
				</if> 
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
		        <if test="vaId != null">
		         #{vaId},
				</if> 
		        <if test="vaYearNum != null and vaYearNum!='' ">
		        #{vaYearNum},
				</if>
		        <if test="vaState != null">
		         #{vaState},
				</if> 
		</trim>
    </insert>
    
    <update id="updateById" parameterType="com.yjtoon.school.domain.VariableYear">
	    update variable_year  set
	     <trim suffixOverrides="," >
		        <if test="vaYearNum != null and vaYearNum!='' ">
		       va_year_num=#{vaYearNum},
				</if>
		        <if test="vaState != null">
		        va_state=#{vaState},
				</if> 
		  </trim>
		 where va_id =#{vaId}
	</update>

	 <update id="updateByIds">
          update variable_year  set
	     <trim suffixOverrides="," >
		        <if test="entity.vaYearNum != null and entity.vaYearNum != '' ">
		        va_year_num= #{entity.vaYearNum},
				</if>
		        <if test="entity.vaState != null">
		        va_state= #{entity.vaState},
				</if> 
		  </trim>
		 where va_id in
		  <foreach collection="ids" item="item" index="index"  open="(" close=")" separator=",">
               #{item}
         </foreach>
	</update>
     
	
	<delete id="deleteById">
        delete from variable_year where va_id =#{vaId}
    </delete>
    
     <delete id="deleteByIds">
        delete from variable_year where va_id in 
        <foreach collection="array" item="item" index="index"  open="(" close=")" separator=",">
               #{item}
        </foreach>  
	</delete>
    
    <delete id="delete" parameterType="com.yjtoon.school.domain.VariableYear">
        delete from variable_year where 1=1 <include refid="whereSql"/> 
    </delete>

	<select id="getSchoolYear" parameterType="com.yjtoon.school.domain.VariableYear" resultType="com.yjtoon.school.vo.VariableYearVo">
		SELECT
		va_id vaId
		,va_year_num vaYearNum
		FROM variable_year
		WHERE 1=1 <include refid="whereSql"/>
	</select>
   
</mapper>